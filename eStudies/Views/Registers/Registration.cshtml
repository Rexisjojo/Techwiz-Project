@model IEnumerable<eStudies.Models.Register>

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Registeration</h1>
<div class="container text-center">
    <div class="row">
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                    <a class="nav-link text-dark card-link" asp-area="" asp-controller="Registers" asp-action="Create">
                <div class="card-body">
                    <h5 class="card-title">Register as Student</h5>
                </div>
                </a>
            </div>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                    <a class="nav-link text-dark card-link" asp-area="" asp-controller="Registers" asp-action="CreateTeacher">
                <div class="card-body">
                    <h5 class="card-title">Register as Teacher</h5>
                </div>
                   
                </a>
            </div>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                    <a class="nav-link text-dark card-link" asp-area="" asp-controller="Registers" asp-action="CreateParent">
                <div class="card-body">
                    <h5 class="card-title">Register as Parent/Guardian</h5>
                </div>
                </a>
            </div>
        </div>
    </div>
</div>



